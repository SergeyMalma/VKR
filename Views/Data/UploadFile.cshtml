@{
    ViewData["Title"] = "Data";
}


<div class="row">
    <div class="col-md-5">
        <form method="post" enctype="multipart/form-data" asp-controller="Data" asp-action="UploadFile">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Загрузить файл</p>
                    <input class="form-control" name="files" type="file" />
                    <p>Название файла</p>
                    <input class="form-control" name="name" type="text" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input class="btn btn-success" type="submit" value="Загрузить" />
                </div>
            </div>
        </form>
    </div>
</div> 
